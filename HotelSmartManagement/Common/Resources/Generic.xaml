<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:reservation="clr-namespace:HotelSmartManagement.ReservationAndRooms.MVVM.Models">
    <Style TargetType="{x:Type reservation:ReservationControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type reservation:ReservationControl}">
                    <TextBlock Text="{Binding Reservation.Reference, RelativeSource={RelativeSource TemplatedParent}}" 
                Style="{StaticResource Title}" HorizontalAlignment="Center" Margin="10,10,10,10" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>