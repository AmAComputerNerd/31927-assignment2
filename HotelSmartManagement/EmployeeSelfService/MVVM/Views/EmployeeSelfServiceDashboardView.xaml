<UserControl x:Class="HotelSmartManagement.EmployeeSelfService.MVVM.Views.EmployeeSelfServiceDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelSmartManagement.EmployeeSelfService.MVVM.Views"
             xmlns:viewmodel="clr-namespace:HotelSmartManagement.EmployeeSelfService.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodel:EmployeeSelfServiceDashboardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="AliceBlue">
        <TextBlock Text="Employee Self-Service" 
                   Style="{StaticResource Title}"/>
        <TextBlock Style="{StaticResource SubTitle}">Welcome <Bold>{user}</Bold>. You have <Bold>{numOfJobs} jobs</Bold> pending (highest urgency level: {highestUrgencyLevel}).</TextBlock>
        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Left" Margin="10,10,0,0" Width="400">
            <UniformGrid Rows="4">
                <Button MinHeight="50"
                        Background="Yellow"/>
                <Button MinHeight="50"
                        Background="Wheat"/>
                <Button MinHeight="50"
                        Background="Wheat"/>
                <Button MinHeight="50"
                        Background="White"/>
            </UniformGrid>
        </ScrollViewer>
        <TextBlock Text="Employment At-A-Glance"
                   Style="{StaticResource Heading}"/>
        <TextBlock Style="{StaticResource SubTitle}">You are currently employed at <Bold>{workHours} hours p/week</Bold>.</TextBlock>
        <TextBlock Style="{StaticResource SubTitle}">Thus far, you average <Bold>{actualWorkHours} hours p/week</Bold> (Time Recording: {timeRecording}%)</TextBlock>
        <TextBlock/>
        <TextBlock Style="{StaticResource SubTitle}">You have <Bold>{leaveHours} hours</Bold> of annual leave saved.</TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Content="My Profile"
                    Padding="5"
                    Margin="10,0,20,0"/>
            <Button Content="My Employment"
                    Padding="5"/>
        </StackPanel>
    </StackPanel>
</UserControl>
